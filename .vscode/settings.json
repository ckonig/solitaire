{
    "files.exclude": {
        "build": true,
        "node_modules": true,
        "package-lock.json": true,
        ".eslintcache": true,
        "debug.log": true,
    },
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
        "javascript", "javascriptreact", "typescript", "typescriptreact", "html"
    ],
    "eslint.debug": true,
    "eslint.workingDirectories": [
        "src"
    ],
    "eslint.lintTask.enable": true,
    "eslint.codeActionsOnSave.mode": "all", 
}
